@model IEnumerable<MVCMovie.Models.Movies>

@{
    ViewData["Title"] = "AllMovies";
}



<div style="background-color:antiquewhite;border-radius:15px" >
    <h1>AllMovies</h1>
    <table class="table">
        <thead>
            <tr style="background-color:gray">
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Theatername)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movie)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Theatername)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Movie)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td style="font-size:x-large">
                        <div class="badge rounded-pill badge-success">@Html.ActionLink("Book Ticket", "MovieBooking", new { id = item.Id }) </div>


                    </td>
                </tr>

            }

        </tbody>
    </table>
    </div>
    <p>
        <button type="button" class="btn btn-outline-danger" onclick="location.href = '@Url.Action("Splash","Home")'">Go to Home</button>
    </p>

    
